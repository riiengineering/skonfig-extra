# Configure keyboard type by modifying /etc/sysconfig/keyboard file.
#

os=$(cat "$__global/explorer/os")
keyboard_type="$(cat "$__object/parameter/type")"

case "$os" in
    adelie|debian|devuan)
        __package console-setup

        require=__package/console-setup \
        __key_value /etc/default/keyboard:LAYOUT \
            --file /etc/default/keyboard \
            --delimiter '=' --strict_delimiter \
            --value "\"${keyboard_type=}\""

        # --target_runlevel is used for OpenRC on AdÃ©lie Linux
        require=__package/console-setup \
        __start_on_boot console-setup \
            --target_runlevel boot
    ;;
    centos)
        __file /etc/sysconfig/keyboard \
            --owner root --group root --mode 644 \
            --state exists

        require="__file/etc/sysconfig/keyboard" \
            __key_value KEYTABLE \
                --file /etc/sysconfig/keyboard \
                --delimiter '=' \
                --value "\"$keyboard_type\""
        
        require="__file/etc/sysconfig/keyboard" \
            __key_value LAYOUT \
                --file /etc/sysconfig/keyboard \
                --delimiter '=' \
                --value "\"$keyboard_type\""
    ;;
    *)
      echo "Your operating system ($os) is currently not supported by this type (${__type##*/})." >&2
      echo "Please contribute an implementation for it if you can." >&2
      exit 1
    ;;
esac
